{
    "name": "hafizhfadh/laravel-simple-datatable",
    "description": "A Laravel-native datatable engine providing both server-side and client-side processing modes.",
    "keywords": [
        "laravel",
        "datatable",
        "simple-datatables",
        "tailwindcss"
    ],
    "homepage": "https://github.com/hafizhfadh/laravel-simple-datatable",
    "license": "MIT",
    "authors": [
        {
            "name": "Hafizh Fadhlurrohman",
            "email": "info@hafizhfadh.id",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "HafizHfadh\\LaravelSimpleDatatable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HafizHfadh\\LaravelSimpleDatatable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "HafizHfadh\\LaravelSimpleDatatable\\LaravelSimpleDatatableServiceProvider"
            ],
            "aliases": {
                "SimpleDatatable": "HafizHfadh\\LaravelSimpleDatatable\\Facades\\SimpleDatatable"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
